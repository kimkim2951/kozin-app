%nav.navbar.sticky-top.navbar-dark.bg-warning
  %a.navbar-brand 缶交大使
  %form.form-inline
  = form_with(url: search_tweets_path, local: true, method: :get, class: "form-inline") do |f|
    = f.text_field :keyword, placeholder: "投稿を検索する", class: "form-control mr-sm-2"
    = f.submit "検索", class: "btn btn-dark my-2 my-sm-0"
    =link_to "投稿一覧へ戻る", "/", {method: "get",class: "btn btn-primary"}


.album.py-5.bg-light
  .container
    .row
      - @tweets.each do |tweet|
        .col-md-4
          .card.mb-4.shadow-
            .image-box
              = image_tag tweet.image.url, class: 'bd-placeholder-img card-img-top thumnail' if tweet.image.present?
            .card-body
              %p.card-text
                = tweet.title
              .d-flex.justify-content-between.align-items-center
                .btn-group.btn
                  =link_to "詳細", tweet_path(tweet.id), {method: "get", class: "btn btn-sm btn-outline-secondary"}
                  - if user_signed_in? && current_user.id == tweet.user_id
                    =link_to "編集", edit_tweet_path(tweet.id), {method: "get",class: "btn btn-sm btn-outline-secondary"}
                    =link_to "削除", tweet_path(tweet.id), {method: "delete",class: "btn btn-sm btn-outline-secondary"}